<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<%= content_tag :section, nil, id: 'ranking-container' do %>
  <div class="row">
    <div class="col s12 l4 offset-l4 center-align">
      <img src="<%= @tournament.logo %>" class="ranking-tournament-logo" />
    </div>
  </div>
  <div class="row">
    <div class="col s12 l4 offset-l4 center-align">
      <div class="card">
        <div class="card-content">
          <div class="right-align last-update">
            <% if @last_update %>
              Última atualização: <%= @last_update.strftime('%d/%m %H:%M') %>
            <% end %>
          </div>

          <% if @ranking.length > 0 %>
            <%= render 'ranking_table', ranking: @ranking %>
          <% else %>
            Ainda não há ranking disponível.
          <% end %>

          <%= link_to root_path, class: 'waves-effect waves-light btn-small button' do %>
            <i class="material-icons left">home</i>Voltar
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
