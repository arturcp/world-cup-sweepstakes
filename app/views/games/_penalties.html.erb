<% has_score = game.host_score.present? && game.visitor_score.present? %>
<% is_tie = game.host_score == game.visitor_score && has_score %>

<div class="card-action center-align penalties-container <%= 'waiting-for-winner' if !game.penalties_winner_id.present? && is_tie && game.host_id && game.visitor_id %>">
  <section class="regular-time-warning <%= 'hide' if is_tie || !has_score %>">
    Game finished in the regular time
  </section>

  <section class="winner-selection <%= 'hide' if !is_tie || !has_score %>">
    <p class="description">Extra time</p>

    <%=
      text_field_tag nil, nil,
        class: "left-align input-for-score",
        disabled: false,
        value: 0,
        maxlength: 2,
        data: {
          game_id: game.id
        }
    %>
    x
    <%=
      text_field_tag nil, nil,
        class: "right-align input-for-score",
        disabled: false,
        value: 0,
        maxlength: 2,
        data: {
          game_id: game.id
        }
    %>
<!--


    <%= render 'radio_button', team: game.host, checked: game.penalties_winner_id && game.penalties_winner_id == game.host_id, game_passed: game.passed? || game.checked?  %>
    <%= render 'radio_button', team: game.visitor, checked: game.penalties_winner_id && game.penalties_winner_id == game.visitor_id, game_passed: game.passed? || game.checked?  %> -->
  </section>
</div>
