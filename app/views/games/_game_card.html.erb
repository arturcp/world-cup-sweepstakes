<div class="card card-panel <%= 'disabled' if game.passed? %> <%= 'ranking-points-distributed' if game.checked? %>">
  <div class="card-content">
    <div class="col s5 right-align host-name">
      <%= render 'team', team: game.host, team_defined: game.host.id.present?,
        alignment: 'right', game: game, score: game.host_score %>
    </div>
    <div class="col s2 versus center-align">X</div>
    <div class="col s5 left-align">
      <%= render 'team', team: game.visitor, team_defined: game.visitor.id.present?,
        alignment: 'left', game: game, score: game.visitor_score %>
    </div>
  </div>
  <div class="game-info">
    <%= game.date.strftime('%d/%m %H:%M') %> <%= game.place %>
  </div>

  <% is_admin = current_user.tournament_admin?(@tournament) %>
  <% if is_admin %>
    <div class="card-action center-align ranking-button-container">
      <a class="waves-effect waves-light btn-small green ranking-button" data-game-id="<%= game.id %>">
        Distribute points
      </a>
    </div>
  <% end %>
</div>
