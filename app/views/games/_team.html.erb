<% admin_user = current_user.id != @tournament.user_id %>
<% klass = "team-name #{'unconfirmed-team' unless team_defined || admin_user}" %>
<%= content_tag :span, class: klass do %>
  <%= team.name %>
<% end %>

<%= image_tag team.flag, class: 'flag', data: { for: team.name } %>

<% guess_unavailable = game.passed? || (!team_defined && admin_user) %>
<%= number_field_tag 'score', nil, class: "#{alignment}-align",
  disabled: guess_unavailable %>
