<% is_admin = current_user.tournament_admin?(@tournament) %>
<% klass = "team-name #{'unconfirmed-team' unless team_defined || is_admin}" %>
<%= content_tag :span, class: klass do %>
  <%= team.name %>
<% end %>

<%= image_tag team.flag, class: 'flag', data: { for: team.name } %>

<% guess_unavailable = game.passed? || (!team_defined && is_admin) %>
<%=
  text_field_tag nil, nil,
    class: "#{alignment}-align input-for-score",
    disabled: guess_unavailable,
    value: score,
    maxlength: 2,
    data: {
      game_id: game.id
    }
%>
