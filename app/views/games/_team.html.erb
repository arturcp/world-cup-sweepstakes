<% klass = "team-name #{'unconfirmed-team' if !team_defined && is_admin}" %>
<%= content_tag :span, class: klass do %>
  <%= team.name %>
<% end %>

<%= image_tag team.flag, class: 'flag', data: { for: team.name } %>

<% guess_unavailable = game.passed? || game.checked? || !team_defined %>
<% guess_unavailable = false if is_admin %>
<%=
  text_field_tag nil, nil,
    class: "#{alignment}-align input-for-score",
    disabled: guess_unavailable,
    value: score,
    maxlength: 2,
    data: {
      game_id: game.id
    }
%>
